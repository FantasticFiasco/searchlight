{
  "name": "searchlight",
  "version": "1.0.0",
  "description": "A desktop application discovering Axis network video devices on your network.",
  "keywords": [
    "searchlight",
    "axis",
    "communications",
    "camera",
    "device",
    "discovery",
    "bonjour",
    "ssdp",
    "upnp"
  ],
  "homepage": "https://github.com/FantasticFiasco/searchlight",
  "repository": {
    "type": "git",
    "url": "https://github.com/FantasticFiasco/searchlight.git"
  },
  "bugs": {
    "url": "https://github.com/FantasticFiasco/searchlight/issues"
  },
  "author": "Mattias Kindborg <mattias.kindborg@gmail.com> (https://twitter.com/FantasticFiasco)",
  "license": "GPL-3.0",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-webpack dll",
    "compile": "electron-webpack",
    "dev": "electron-webpack dev",
    "lint": "tslint --exclude './src/**/*.d.ts' './src/**/*.ts'",
    "lint:fix": "tslint --fix --exclude './src/**/*.d.ts' './src/**/*.ts'",
    "predist": "json -I -f ./src/main/config.json -e this.analytics.trackingId='process.env.UNIVERSAL_ANALYTICS_TRACKING_ID'",
    "dist": "yarn compile && electron-builder --publish onTagOrDraft",
    "dist:dir": "yarn compile && electron-builder --dir -c.compression=store -c.mac.identity=null",
    "icons": "icon-gen --input ./assets/app-icon --output ./assets --type png --report"
  },
  "build": {
    "appId": "com.fantasticfiasco.searchlight",
    "productName": "Searchlight",
    "compression": "maximum",
    "linux": {
      "target": "AppImage",
      "category": "Network"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "default",
      "category": "public.app-category.utilities",
      "electronUpdaterCompatibility": ">=2.16.0"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "electronWebpack": {
    "title": "Searchlight",
    "renderer": {
      "dll": [
        "axis-discovery",
        "bootstrap",
        "bootstrap-vue",
        "chart.js",
        "simple-line-icons",
        "vue",
        "vue-chartjs"
      ]
    }
  },
  "greenkeeper": {
    "ignore": [
      "vue"
    ]
  },
  "dependencies": {
    "@fantasticfiasco/expect": "1.0.0",
    "axis-discovery": "1.1.0",
    "axis-discovery-bonjour": "1.0.0",
    "axis-discovery-ssdp": "4.1.0",
    "electron-debug": "1.4.0",
    "electron-log": "2.2.11",
    "electron-store": "1.3.0",
    "electron-updater": "2.16.3",
    "font-awesome": "4.7.0",
    "simple-line-icons": "2.4.1",
    "source-map-support": "0.5.0",
    "universal-analytics": "0.4.16",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "@types/electron-debug": "1.1.0",
    "@types/electron-store": "1.2.0",
    "@types/universal-analytics": "0.4.2",
    "@types/uuid": "3.4.3",
    "bootstrap": "4.0.0-beta.2",
    "bootstrap-vue": "1.3.0",
    "chart.js": "2.7.1",
    "devtron": "1.4.0",
    "electron": "1.7.9",
    "electron-builder": "19.48.2",
    "electron-webpack": "1.11.0",
    "electron-webpack-ts": "1.2.0",
    "electron-webpack-vue": "1.1.0",
    "icon-gen": "1.2.0",
    "json": "9.0.6",
    "node-sass": "4.7.2",
    "sass-loader": "6.0.6",
    "tslint": "5.8.0",
    "typescript": "2.6.2",
    "vue": "2.5.2",
    "vue-chartjs": "2.8.7",
    "vue-class-component": "6.1.1",
    "vue-property-decorator": "6.0.0",
    "vue-router": "3.0.1",
    "vuex": "3.0.1",
    "webpack": "3.10.0",
    "webpack-build-notifier": "0.1.18"
  }
}
